{
    "$schema": "https://turborepo.org/schema.json",
    "globalDotEnv": [".env"],
    "pipeline": {
        "dev": {
            "cache": false,
            "dotEnv": [
                ".env"
            ]
        },
        "build": {
            "dotEnv": [
                ".env"
            ],
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "/apps/api/dist/**"
            ]
        },
        "start": {
            "dependsOn": [
              "^build"
            ]
          }
    }
}